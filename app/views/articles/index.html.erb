<h1>Articles</h1>

<ul>
<% @articles.each do |article| %>
 <li><%= link_to article.title, article_path(article) %> <%= link_to " -",
            article_path(article),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" } %></li>
<% end %>
</ul>

